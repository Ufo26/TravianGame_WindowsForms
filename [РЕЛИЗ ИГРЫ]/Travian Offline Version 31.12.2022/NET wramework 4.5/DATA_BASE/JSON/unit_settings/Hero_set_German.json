//Настройки героя Германцы/ Hero Settings German
//Когда HP = 0, герой становится неактивным и появляется панелька: "ВОССТАНОВИТЬ ГЕРОЯ"
{
  "Name": "German hero / Германский герой",
  "isCreated": false, //true = герой создан, false = герой не создан
  "Level": 0, //уровень героя
  "Kills": 0, //кол-во убитых юнитов
  "Points": 5, //количество доступных очков распределения
  "Points_per_lvl": 4, //количество очков распределения за уровень
  "HP": 100, //очки здоровья
  "HP_Regeneration": 10, //регенерация здоровья в сутки
  "Power": 0, //текущая индивидуальная сила атаки и обороны героя
  "Power_Add": 80, //увеличивает силу героя на эту величину при распределении очков опыта
  "Bonus_Attack": 0, //увеличивает атаку всех войск, находящихся с героем на эту величину - %
  "Bonus_Attack_Add": 0.2, //увеличивает бонус атаки на эту величину при распределении очков опыта
  "Bonus_Defense": 0, //увеличивает защиту всех войск, находящихся с героем на эту величину - %
  "Bonus_Defense_Add": 0.2, //увеличивает бонус защиты на эту величину при распределении очков опыта
  "Bonus_Resourses": { //увеличивает добычу ресурсов на эту величину - %
    "wood": 0.0, "clay": 0.0, "iron": 0.0, "crop": 0.0, "gold": 0.0 //множители *%
  },
  "Bonus_Resourses_Add": 1, //увеличивает множители бонуса добычи ресурсов, либо +1 к одному ресурсу, либо +0.2 к каждому ресурсу
  "Bonus_Farm": 20, //% сокращения вместимости вражеских тайников если в атаке участвует герой
  "Bonus_Recovery_Time": 0, //сокращает время восстановления на эту величину
  "Bonus_Recovery_Time_Add": 0.5, //увеличивает бонус восстановления на эту величину
  "Consumption": 1, //текущее потребление зерна в час героем
  "Speed": 7, //текущая скорость героя: полей/в час
  "Horse": false, //true - герой верхом, false - герой пеший
  "Speed_Horse_Add": 7, //добавление к скорости передвижения героя если Horse = true, на войска не распространяется
  "TimerOfRecovery": 0, //время восстановления героя на каждом уровне в секундах, по сути таймер
  "isHome": true //true - герой дома, false - герой в походе или подкрепе.
}
